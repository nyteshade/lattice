{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["es6", "README.md"],
    "includePattern": ".+\\.(js|jsx)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": [
    "plugins/markdown",
    "node_modules/jsdoc-babel"        
  ],
  "babel": {
      "extensions": ["js", "es6", "jsx"],
      "presets": [
        "es2015",
        "es2016",
        "es2017",
        "stage-1",
        "flow",
        ["env", {
          "targets": { "node": "current" },
          "modules": "commonjs",
          "useBuiltIns": true,
          "debug": false
        }]
      ],
      "plugins": ["transform-runtime", "transform-decorators-legacy"]
  },    
  "markdown": {
		"parser": "gfm",
		"hardwrap": true,
		"excludeTags": []
	},
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "useLongnameInNav": true,
    "applicationName": "graphql-lattice",
    "meta": {
      "title": "",
      "description": "",
      "keyword": ""
    },
    "linenums": true,
    "default":{
      "outputSourceFiles" : true,
      "theme":"github",
      "paramsDisplay":"compact"
    }
  },
  "opts": {
    "_template": "./node_modules/kitsune-jsdoc-template",
    "template": "./node_modules/kitsune-jsdoc-template",
    "encoding": "utf8",
    "destination": "./docs/",
    "private": true,
    "recurse": true
  }
}